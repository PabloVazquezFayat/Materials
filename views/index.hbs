<div class="container">
  <div class="wrapper">

    <div class="graphic">
      <img src="/images/building.png" alt="image of 3D sphere">
    </div>

    <div class="create-account">
      <div class="singup-or-login">

        <div class="signup-form">
          {{#if error}}
            <h1 class="fail-message">{{error}}</h1>
          {{else}}
            <h1>Create a new account!</h1>
          {{/if}}
          <form action="/signup" method="POST" id="user-signup">
            <label>Name:</label>
            <input type="text" name="name" required="true" placeholder="Enter your name">
            <label>Email:</label>
            <input type="email" name="email" required="true" placeholder="Enter your Email">
            <label>Password:</label>
            <input type="password" name="password" required="true" placeholder="Enter a new password">
            <button>Create Account</button>
          </form>
        </div>

        <div class="login-form">
          {{#if error}}
            <h1 class="fail-message">{{error}}</h1>
          {{else}}
            <h1 class="fail-message">Log in</h1>
          {{/if}}
          <form action="/login" method="POST" id="user-login">
            <label>Email:</label>
            <input type="email" name="email" required="true" placeholder="Enter your Email">
            <label>Password:</label>
            <input type="password" name="password" required="true" placeholder="Enter your password">
            <button>Log in</button>
          </form>
        </div>

      </div>
    </div>

  </div>
</div>

<div class="sec-container">
  <div class="sec-wrapper">
    <div class="about">
      <h1>About Materials</h1>
       <h3>All your image resources in one place</h3>
      <hr>
      <p>
        Materials is a cloud based image repository for 3D artists. Create and archive all your texture 
        assets in a simple and intuitive, user-friendly platform.
      </p>
    </div>
    <div class="graphic-section">
      <img src="/images/no-image.png" alt="">
    </div>
  </div>
</div>
