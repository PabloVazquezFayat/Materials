<div class="editor-container">
  <div class="editor-wrapper">
    <div class="material-editor">
      <div class="material">
        <div class="material-name">
          <img id="mat-icon" src="{{material.diffuse}}" alt="Material diffuse texture" onerror="this.src='/images/no-image.jpg';">
          <h5>{{material.name}}</h5>
        </div>
        <div class="material-cat">
          <h5>{{material.category}}</h5>
        </div>
        <div class="material-props">
          <div class="material-prop">
            <img src="{{material.diffuse}}" alt="Material diffuse texture" onerror="this.src='/images/no-image.jpg';">
            <p>Diffuse map</p>
            <div class="material-actions">
              {{!-- <div class="mat-del">
                <img src="/images/minus-blk.png" alt="">
              </div>
              <div class="mat-add">
                <img src="/images/plus-blk.png" alt="">
              </div> --}}

              <form action="/upload/diffuse" method="POST" enctype="multipart/form-data">
                <input type="file" name="texture" required='true'>
                <button>Add</button>
              </form>

              <form action="/delete/{{material._id}}/diffuse" method="POST" enctype="multipart/form-data">
                <button>Delete</button>
              </form>

            </div>
          </div>
          <div class="material-prop">
            <img src="{{material.specular}}" alt="Material specular texture" onerror="this.src='/images/no-image.jpg';">
