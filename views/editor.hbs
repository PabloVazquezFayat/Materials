          <div class="material-prop">
            <img src="{{material.diffuse}}" alt="Material diffuse texture" onerror="this.src='/images/no-image.jpg';" id="diffuse">
            <p>Diffuse map</p>
            <div class="material-actions">

              <form action="/upload/diffuse" method="POST" enctype="multipart/form-data" class="upload-texture-form">
                <label class="file-container">
                  <input type="file" name="texture" required='true' class="upload-texture" id="diff">
                </label>
                <button class="mat-add diff"><img src="/images/plus-blk.png" alt=""></button>
              </form>

              <form action="/delete/{{material._id}}/diffuse" method="POST" enctype="multipart/form-data">
                <button class="mat-del"><img src="/images/minus-blk.png" alt=""></button>
              </form>

            </div>
          </div>

