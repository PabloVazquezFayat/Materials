<div class="editor-container">
  <div class="editor-wrapper">
    <div class="material-editor">

      <div class="material">
        <div class="material-name">
          <img id="mat-icon" src="{{material.diffuse}}" alt="Material diffuse texture" onerror="this.src='/images/no-image.jpg';">
          <h5>{{material.name}}</h5>
        </div>
        <div class="material-cat">
          <h5>{{material.category}}</h5>
        </div>
